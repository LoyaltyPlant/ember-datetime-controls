<div class="dt-control__input" {{action showCalendar bubbles=false}}>
  {{formattedDate}}
  {{yield}}
</div>
{{#if timeEnabled}}
  {{private/time-control
    date=date
    timeZone=timeZone
    locale=locale
    isAmPmTimezone=isAmPmTimezone
    minTime=minTime
    maxTime=maxTime
    hideCalendar=hideCalendar
  }}
{{/if}}
