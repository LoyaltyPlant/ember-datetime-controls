<div class="dt-pickers">
  {{#if dateEnabled}}
    <div class="dt-pickers__picker dt-pickers__picker--date" {{action 'showCalendar' bubbles=false}} tabindex="0">
      {{formattedDate}}

      {{#if isShowCalendar}}
        {{private/calendar-control
            date=date
            minDate=minDate
            maxDate=maxDate
            disabledDates=disabledDates
            timeZone=timeZone
            locale=locale
            onDateUpdated=(action 'updateDate')
            onDateChange=onDateChange
        }}
      {{/if}}
    </div>
  {{/if}}
  {{#if timeEnabled}}
    <div class="dt-pickers__picker dt-pickers__picker--time" tabindex="0">
      <div class="dt-pickers__time dt-pickers__time--hour" {{action 'showHourPicker' bubbles=false}}>
          {{currentHours}}
          {{#if isShowHourPicker}}
            {{private/hour-picker
              timeZone=timeZone
              locale=locale
              date=date
              minDate=minDate
              maxDate=maxDate
              minTime=minTime
              maxTime=maxTime
              hide=(action 'hideHourPicker')
              onTimeChange=onTimeChange
            }}
          {{/if}}
      </div>
      <div class="dt-pickers__time dt-pickers__time--minutes" {{action 'showMinutePicker' bubbles=false}}>
          {{currentMinute}}
          {{#if isShowMinutePicker}}
            {{private/minute-picker
              timeZone=timeZone
              locale=locale
              date=date
              minDate=minDate
              maxDate=maxDate
              minTime=minTime
              maxTime=maxTime
              hide=(action 'hideMinutePicker')
              onTimeChange=onTimeChange
            }}
          {{/if}}
      </div>
      {{#if isAmPm}}
        <div class="dt-pickers__time dt-pickers__time--meridiem">
          {{meridiem}}
        </div>
      {{/if}}
    </div>
  {{/if}}
</div>