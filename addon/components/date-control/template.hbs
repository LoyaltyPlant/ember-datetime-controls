<div class="dt-pickers__formatted-date {{if (not formattedDate) 'dt-pickers__formatted-date--placeholder'}}">{{or formattedDate placeholder}}</div>
{{#if (and allowClear isDateSelected)}}
    <i class="icon-delete" {{action "cleanDate" bubbles=false}}></i>
{{else}}
    <i class="icon-calendar"></i>
{{/if}}
{{#if show}}
  {{calendar-control
      date=date
      minDate=minDate
      maxDate=maxDate
      disabledDates=disabledDates
      timeZone=timeZone
      locale=locale
      onDateUpdated=(action "onDateUpdated")
  }}
{{/if}}
