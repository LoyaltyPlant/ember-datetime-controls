{{date-control
    date=date
    minDate=minDate
    maxDate=maxDate
    disabledDates=disabledDates
    timeZone=timeZone
    locale=locale
    onDateUpdated=(action "onDateUpdated")
}}
{{time-control
    time=time
    locale=locale
    onchange=(action "onTimeChange")
    disabled=isTimePickerDisabled
}}