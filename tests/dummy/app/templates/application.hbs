<div class="row">

    <div class="col-xs-12">
        <h2>DateTimePickers</h2>
    </div>

    <div class="col-sm-4">
        <div class="box">
            {{all-pickers-block
                date=model.newYorkDate
                locale="en-US"
                timeZone="America/New_York"
                onchange=(action (mut model.newYourkDate))
            }}
        </div>
    </div>

    <div class="col-sm-4">
        <div class="box">
            {{all-pickers-block
                date=model.berlinDate
                locale="de"
                timeZone="Europe/Berlin"
                onchange=(action (mut model.berlinDate))
            }}
        </div>
    </div>

    <div class="col-sm-4">
        <div class="box">
            {{all-pickers-block
                date=model.moscowDate
                locale="ru"
                timeZone="Europe/Moscow"
                onchange=(action (mut model.moscowDate))
            }}
        </div>
    </div>

</div>

